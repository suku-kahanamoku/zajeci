{
  "syscode": "profile",
  "patchUrl": "/api/admin/user/${item._id}",
  "method": "PATCH",
  "fields": [
    {
      "name": "email",
      "type": "email",
      "label": "$.form.email",
      "placeholder": "john@doe.com",
      "required": true,
      "clearable": true,
      "size": "lg",
      "value": ""
    },
    {
      "name": "role",
      "type": "select",
      "label": "$.form.role",
      "required": true,
      "size": "lg",
      "options": [
        { "value": "guest", "label": "$.form.guest" },
        { "value": "user", "label": "$.form.user" },
        { "value": "admin", "label": "$.form.admin" }
      ],
      "value": "guest"
    },
    {
      "name": "givenName",
      "type": "text",
      "label": "$.form.given_name",
      "placeholder": "John",
      "required": true,
      "clearable": true,
      "size": "lg",
      "value": ""
    },
    {
      "name": "surname",
      "type": "text",
      "label": "$.form.surname",
      "placeholder": "Doe",
      "required": true,
      "clearable": true,
      "size": "lg",
      "value": ""
    },
    {
      "name": "password",
      "type": "password",
      "label": "$.form.old_password",
      "clearable": true,
      "minLength": 8,
      "size": "lg",
      "autocomplete": "new-password",
      "value": ""
    },
    {
      "name": "newPassword",
      "type": "password",
      "label": "$.form.new_password",
      "clearable": true,
      "minLength": 8,
      "size": "lg",
      "value": ""
    }
  ]
}
